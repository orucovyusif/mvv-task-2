@using Mamba_mvc.Models;
@model Store

<div class="container">

    <form method="post">
       <div class="row" >

            <div class="mb-3 col-md-4">
                <label asp-for=Name class="form-label">Name</label>
                <input class="form-control" asp-for=Name>
                <span asp-validation-for="Name" style="color:red"></span>
            </div>

            <div class="mb-3 col-md-4">
                <label asp-for=Description class="form-label">Description</label>
                <input  asp-for=Description>
                <span asp-validation-for="Description" style="color:red"></span>
            </div>

            <div class="mb-3 col-md-4">
                <label asp-for=ImgFile class="form-label">ImgFile</label>
                <input  asp-for=ImgFile>
                <span asp-validation-for="ImgFile" style="color:red"></span>
            </div>

       </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>